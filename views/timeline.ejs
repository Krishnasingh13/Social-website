<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Timeline</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark d-flex justify-content-between ">
        <div class="container-fluid mx-5">
            <span class="navbar-brand mb-0 h1">Navbar</span>
            <div class="links">
                <a href="/create" class='mx-5'>create post</a>
                <a href="/logout">logout</a>
            </div>
        </div>
    </nav>


    <%if(allPosts.length>0){%>
    <%  allPosts.forEach(function(post){%>
    <div class="container w-100 d-flex justify-content-center">
        <div class="card text-dark bg-light mb-3" style="width: 100rem;">
            <h3><%=post.user.username%></h3>
            <div class="card-image p-3">
                <img style="width: 100%; height: 27rem; object-fit: cover;" src="../images/upload/<%=post.image%>"
                    class="card-img-top" alt="...">
            </div>
            <div class="card-body">
                <p class="card-text"><%=post.text%></p>
                <%if(post.comment.length>0){%>
                <h2>comments</h2>
                <% post.comment.forEach(function(comment){%>
                <div style="width: 100%; display: flex; justify-content: space-between;">
                    <div>
                        <span style="font-weight: bold;"><%=comment.userId%></span>
                        <span><%=comment.comment%></span>
                    </div>

                </div>
                <% })%>
                <%}%>
            </div>

            <form action="/comment/<%=post._id%>" method="post" class="mx-5">
                <div class="mb-3">
                    <label class="form-label">add comment</label>
                    <input name="comment" type="text" class="form-control" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary">post</button>
                </form>
                <br>
            </div>
        </div>

        <%}) %>
        <%}else{%>
        <div class="container">
            <h1>No Post yet</h1>
        </div>
        <%}%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

</body>
</html>